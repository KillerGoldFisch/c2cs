<Project Sdk="Microsoft.NET.Sdk">

    <!-- MSBuild project settings -->
    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <RootNamespace>C2CS.CSharp</RootNamespace>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <!-- My-MSBuild project settings -->
    <PropertyGroup>
        <EnableAnalyzers>true</EnableAnalyzers>
        <EnableAnalyzersStyleCop>true</EnableAnalyzersStyleCop>
    </PropertyGroup>
    
    <!-- Project references -->
    <ItemGroup>
      <ProjectReference Include="..\C2CS.Languages.C\C2CS.Languages.C.csproj" />
    </ItemGroup>
    
    <!-- NuGet package references -->
    <ItemGroup>
        <PackageReference Include="Microsoft.CodeAnalysis.Compilers" Version="3.6.0-3.final" />
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.6.0-3.final" />
    </ItemGroup>

</Project>
