<Project Sdk="Microsoft.NET.Sdk">

    <!-- MSBuild project settings -->
    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <RootNamespace />
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <!-- My-MSBuild project settings -->
    <PropertyGroup>
        <EnableAnalyzers>false</EnableAnalyzers>
        <EnableAnalyzersStyleCop>false</EnableAnalyzersStyleCop>
    </PropertyGroup>

    <!-- NativeTools -->
    <PropertyGroup>
        <NativeToolsSourcePath>$(RootPath)ext/native-tools-cs/src</NativeToolsSourcePath>
    </PropertyGroup>
    <ItemGroup>
        <Compile Include="$(NativeToolsSourcePath)/**/*">
            <Link>native-tools-cs/%(Filename)%(Extension)</Link>
        </Compile>
    </ItemGroup>

</Project>
