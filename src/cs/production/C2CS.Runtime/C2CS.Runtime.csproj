<Project Sdk="Microsoft.NET.Sdk">

    <!-- MSBuild project settings -->
    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <RootNamespace>C2CS</RootNamespace>
    </PropertyGroup>

    <!-- MSBuild.Tools settings -->
    <PropertyGroup>
        <EnableCodeCoverage>false</EnableCodeCoverage>
    </PropertyGroup>

    <!-- NuGet -->
    <PropertyGroup>
        <IsPackable>true</IsPackable>
        <RepositoryUrl>https://github.com/bottlenoselabs/c2cs</RepositoryUrl>
        <PackageDescription>Minimal runtime library helper for C# code generated by C2CS.</PackageDescription>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <IncludeSymbols>false</IncludeSymbols>
        <CopyBuildOutputToOutputDirectory>true</CopyBuildOutputToOutputDirectory>
        <CopyOutputSymbolsToOutputDirectory>true</CopyOutputSymbolsToOutputDirectory>
        <DevelopmentDependency>true</DevelopmentDependency>
    </PropertyGroup>

    <!-- bottlenoselabs.C2CS.Runtime.props will include compile files, but then they will get compiled twice for this .csproj -->
    <ItemGroup>
        <Compile Remove="$(MSBuildThisFileDirectory)/**/*.cs" />
        <None Include="$(MSBuildThisFileDirectory)/**/*.cs" />
    </ItemGroup>

    <Import Project="$(MSBuildThisFileDirectory)/bottlenoselabs.C2CS.Runtime.props" />

    <!-- NuGet package content-->
    <ItemGroup>
        <Content Update="$(MSBuildThisFileDirectory)/**/*.*">
            <Pack>true</Pack>
            <PackagePath>content/</PackagePath>
        </Content>
        <Content Update="$(MSBuildThisFileDirectory)/bottlenoselabs.C2CS.Runtime.props">
            <PackagePath>build/</PackagePath>
            <PackageCopyToOutput>true</PackageCopyToOutput>
        </Content>
        <Content Update="$(MSBuildThisFileDirectory)/bottlenoselabs.C2CS.Runtime.targets">
            <PackagePath>build/</PackagePath>
            <PackageCopyToOutput>true</PackageCopyToOutput>
        </Content>
        <Content Remove="$(MSBuildThisFileDirectory)/obj/**/*" />
        <Content Remove="$(MSBuildThisFileDirectory)/bin/**/*" />
        <Content Remove="$(MSBuildThisFileDirectory)/C2CS.Runtime.csproj" />
    </ItemGroup>

</Project>
