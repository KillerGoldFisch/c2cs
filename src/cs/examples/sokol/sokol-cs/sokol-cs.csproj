<Project Sdk="Microsoft.NET.Sdk">

    <!-- MSBuild project settings -->
    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <RootNamespace />
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <!-- Project references -->
    <ItemGroup>
      <ProjectReference Include="..\..\..\prod\C2CS.Runtime\C2CS.Runtime.csproj" />
    </ItemGroup>

    <!-- pixel-formats-cs-->
    <PropertyGroup>
        <PixelFormatsSourcePath>$(GitRepositoryPath)/ext/pixel-formats-cs/src</PixelFormatsSourcePath>
    </PropertyGroup>
    <ItemGroup>
        <Compile Include="$(PixelFormatsSourcePath)/*.cs">
            <Link>pixel-formats-cs/%(Filename)%(Extension)</Link>
        </Compile>
    </ItemGroup>

    <!-- Copy native libraries -->
    <ItemGroup>
        <None Update="**/*.dll">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="**/*.dylib">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

</Project>
